<% if (articulo){ %>
    <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header">Modificar Registro del Articulo</div>
            <div class="card-body">
                <form action="/actualizarArticulo" method="POST">
                    <input id="idArticulo" name="idArticulo" value="<%= articulo.idArticulo %>" hidden>
                    
                    <div class="mb-3">
                    <label for="articulo" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombreArticulo" name="nombreArticulo" value="<%= articulo.nombreArticulo %>" tabindex="1">
                    </div>   
                    
                    <div class="mb-3">
                        <label for="articulo" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="fecha" name="fecha" value="<%= articulo.fecha %>" tabindex="2">
                    </div>     
                    
                    <div class="mb-3">
                        <label for="articulo" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="descripcion" name="descripcion" value="<%= articulo.descripcion %>" tabindex="3">
                    </div>     

                    <div class="mb-3">
                        <label for="articulo" class="form-label">Precio Compra</label>
                        <input type="number" class="form-control" id="precioCompra" name="precioCompra" value="<%= articulo.precioCompra %>" tabindex="2">
                    </div>     
                    
                    <div class="mb-3">
                        <label for="articulo" class="form-label">Precio Venta</label>
                        <input type="number" class="form-control" id="precioVenta" name="precioVenta" value="<%= articulo.precioVenta %>" tabindex="2">
                    </div>  

                    <div class="mb-3">
                        <label for="articulo" class="form-label">Activo</label>
                        <select id="desc" name="activo" class="form-select" aria-label="Default select example" tabindex="3">
                            <option <%= articulo.activo== 1 ? "selected" : '' %> value=1 >1</option>
                            <option <%= articulo.activo== 0 ? "selected" : '' %> value=0 >0</option>                    
                        </select>
                     </div>  

                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/" class="btn btn-secondary">Regresar</a>
                </form>
            </div>
        </div>        
    </div>
   <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
