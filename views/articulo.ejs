<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- iconos -->
    

<link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <title>Administracion de Articulos</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      
      <div class="container-fluid">
    
        <a class="navbar-brand" href="/">Administrador Diego</a>
    
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            
            <li class="nav-item">
              <a class="nav-link" href="/">Personas y Usuarios</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/verArticulo">Articulos</a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link" href="/verVenta">Ventas</a>
            </li>
        
          </ul>
        
        </div>
      
      </div>
  
  </nav>

    <div class="container">
        <a href="/" class="btn btn-outline-primary mt-4">Regresar</box-icon></a>
        <a href="/agregarArticulo" class="btn btn-outline-primary mt-4">Agregar</box-icon></a>
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID Articulo</th>
                    <th scope="col">Nombre Articulo</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Precio Compra</th>
                    <th scope="col">Precio Venta</th>
                    <th scope="col">Activo</th>
                    <th scope="col">Modificar</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((articulo) => { %>
                <tr>
                    <td><%= articulo.idArticulo %> </td>
                    <td><%= articulo.nombreArticulo %> </td>
                    <td><%= articulo.descripcion %> </td>
                    <td><%= articulo.fecha %> </td>
                    <td><%= articulo.precioCompra %> </td>
                    <td><%= articulo.precioVenta %> </td>
                    <td><%= articulo.activo %> </td>
                    <td>
                        <a href="/modificarArticulo/<%= articulo.idArticulo %>" class="btn btn-outline-info">Actualizar</a>
                    </td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>