<% if (persona){ %>
    <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header">Editar Registro de la Persona</div>
            <div class="card-body">
                <form action="/actualizarPersona" method="POST">
                    <input id="idPersona" name="idPersona" value="<%= persona.idPersona %>" hidden>
                    
                    <div class="mb-3">
                    <label for="persona" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<%=  persona.nombre %>" tabindex="1">
                    </div>   
                    
                    <div class="mb-3">
                        <label for="persona" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="correo" name="correo" value="<%= persona.correo %>" tabindex="2">
                    </div>              
                    
                    <div class="mb-3">
                      <label for="persona" class="form-label">Activo</label>
                      <select id="activo" name="activo" class="form-select" aria-label="Default select example" tabindex="3">
                          <option <%= persona.activo== 1 ? "selected" : '' %> value=1 >1</option>
                          <option <%= persona.activo== 0 ? "selected" : '' %> value=0 >0</option>                    
                      </select>
                   </div>   
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/" class="btn btn-secondary">Regresar</a>
                </form>
            </div>
        </div>        
    </div>
   <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
